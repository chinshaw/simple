<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t='urn:import:com.simple.original.client.view.widgets'>

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

	
	<ui:style>
		.container {
			border:1px solid #CCC;
			border-radius: 5px;
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.container}">
		<table>
		    <tbody>
		        <tr>
		            <td>Color</td>
		            <td>Min</td>
		            <td>Max</td>
		        </tr>
		    </tbody>
		    	<g:FlowPanel ui:field="ranges" />
		        <g:Button ui:field="addRange" styleName="{resources.style.textButton}">add</g:Button>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>