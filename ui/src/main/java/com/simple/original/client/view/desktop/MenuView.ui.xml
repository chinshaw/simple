<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:com.simple.original.client.view"
	xmlns:desktop="urn:import:com.simple.original.client.view.desktop">

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

	<ui:style>
		.contentHeader {
			background: #DDDDDD;
			background: -webkit-gradient(linear, left top, left bottom, from(#DDDDDD),
				to(#DDDDDD));
			background: -webkit-linear-gradient(top, #DDDDDD, #EEEEEE);
			background: -moz-linear-gradient(top, #DDDDDD, #EFEFEF);
			background: -ms-linear-gradient(top, #DDDDDD, #EEEEEE);
			background: -o-linear-gradient(top, #DDDDDD, #EEEEEE);
			border: 1px solid #DDDDDD;
			padding-top: 10px;
			padding-left: 10px;
		}
		
		.configurationMenu {
			visibility: hidden;
			width: 175px;
		}
		
		@external .configurationButton;
		.configurationButton {
			float: right;
			margin-right: 15px;
			padding-left: 3px;
			padding-right: 3px;
			padding-top: 3px;
		}
		
		@external hovering;
		.hovering {
			background-color: white;
			border-left: 1px solid #CCC;
			border-top: 1px solid #CCC;
			border-right: 1px solid #CCC;
			box-shadow: 0 1px 5px #FFFFFF;
			z-index: 10;
			margin-top: -3px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX">
		<g:north size="25">
		
			<g:MenuBar animationEnabled="true" ui:field="rootMenu">
				<g:MenuItem text="Options">
					<g:MenuBar vertical="true" animationEnabled="true" ui:field="optionsMenu">
						<g:MenuItem ui:field="preferences">Preferences</g:MenuItem>
						<g:MenuItem ui:field="showDebugWindow">Show Debug Window</g:MenuItem>
						<g:MenuItem ui:field="enableRemoteLogging">Enable Remote Logging</g:MenuItem>
						<g:MenuItem ui:field="showLogs" title="Shows the server side logging information">Logs</g:MenuItem>
					</g:MenuBar>
				</g:MenuItem>
				<g:MenuItem text="Favorites">
					<g:MenuBar vertical="true" animationEnabled="true" ui:field="favoritesMenu">
						<g:MenuItem ui:field="addFavorite" title="Add a new favorite to your list of favorite places">Add Favorite</g:MenuItem>
						<g:MenuItem ui:field="editFavorites" title="Edit your list of favorites">Edit Favorites</g:MenuItem>
						<g:MenuItem ui:field="defaultPage" title="Set the current page as your default home screen to be shown after log in">Set Home Screen</g:MenuItem>
					</g:MenuBar>
				</g:MenuItem>
			</g:MenuBar>
			
		</g:north>
		<g:north size="60">
			<g:HTMLPanel styleName="{style.contentHeader}">
				<div style="float:left;width:50%">
					<h1 ui:field="contentTitle">Virtual Factory</h1>
					<h3 style="padding-left: 1em" ui:field="contentDescription">Virtual Factory</h3>
				</div>
			</g:HTMLPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>