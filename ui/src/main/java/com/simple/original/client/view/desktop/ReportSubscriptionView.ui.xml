<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:com.simple.original.client.view.widgets"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:d="urn:import:com.simple.original.client.view.desktop">

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

<!-- Below styles need to shift to hpstyles.css or can be replaced by using existing styles-->	
	<ui:style>

		.buttonCollection {
			margin-top: 1em;
			float: right;
		}
		
	</ui:style>

	<g:DockLayoutPanel styleName="{resources.style.contentPanel}">
		<g:center>
			<g:HTMLPanel styleName="">
				<g:FlowPanel ui:field="contentPanel" styleName="">
					<t:ErrorPanel ui:field="errorPanel"></t:ErrorPanel>
				</g:FlowPanel>
				<label class="{resources.style.tabbedPanelLabel}">Report Detail</label>
				 <div class="{resources.style.tabbedPanel} ">
					<div height="20em" width="20em" style="float:left;">
						<div>
							<g:Label>Report Name </g:Label>
							<g:TextBox ui:field="name" visibleLength="30" maxLength="256"></g:TextBox>
						</div>
						<div>
							<g:Label>Report Description</g:Label>
							<g:TextArea height="11.5em" width="20em" ui:field="description" ></g:TextArea>
							
						</div>
					</div>
			</div>	
				<br />
				<g:HTMLPanel ui:field="reportSubscriptionPanel">
					<label class="{resources.style.tabbedPanelLabel}">Report Subscription</label>
					<div class="{resources.style.tabbedPanel} ">
						<div>
							<div style="float:left;	margin:1em; margin-left:5em;" width="20em" height="13em">
								<g:Label>Simple Users</g:Label>
								<g:ScrollPanel height="11em" width="25em">
									<c:CellList ui:field="usersList"></c:CellList>
									</g:ScrollPanel>
								</div>
								<div style="float:right; margin:1em; margin-right:5em;" width ="20em" height="13em">
									<g:Label>Report Subscription list</g:Label>
									<g:ScrollPanel height="11em" width="25em">
 									<c:CellList ui:field="subscribersList"></c:CellList>
 									</g:ScrollPanel>
 								</div>
							</div>

						<div>
							<div align="center" style="margin-top:19em">
								<g:Button ui:field="addUser">Add>></g:Button>
 								<g:Button ui:field="removeUser">&lt;&lt;Remove</g:Button>
							</div>
						</div>
					</div>
				</g:HTMLPanel>
				<br />
				<div class="{style.buttonCollection}">
					<g:Button ui:field="cancel">Cancel</g:Button>
					<g:Button ui:field="save">Save</g:Button>
				</div>
			</g:HTMLPanel>
		</g:center>	
	</g:DockLayoutPanel>
</ui:UiBinder>