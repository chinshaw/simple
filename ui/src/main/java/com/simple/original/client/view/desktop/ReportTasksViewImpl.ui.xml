<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:com.simple.original.client.view.widgets"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:d="urn:import:com.simple.original.client.view.desktop">

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

	<ui:style>
		.panel {
			margin: 2em;
			margin-right: 2em;
		}
		
		.code {
			width: 100%;
			height: 15em;
		}
		
		.searchBox {
			color: #FFF;
			background: transparent;
			border: 1px solid #333;
			width: 15em;
			margin-left: 0em;
		}
		
		.listBox {
			float: right;
		}
		
		.inputsPanel {
			padding: 2em;
			border: 1px solid #CCC;
		}
		.buttonStyle{
			width : 10em;
		}
	</ui:style>

	<g:DockLayoutPanel styleName="{resources.style.contentPanel}">
		<g:center>
			<g:HTMLPanel styleName="">
				<t:ErrorPanel ui:field="errorPanel"></t:ErrorPanel>
				<g:Label addStyleNames="{resources.style.tabbedPanelLabel}" ui:field="label"></g:Label>
				<div class="{resources.style.tabbedPanel} ">
					<g:FlowPanel styleName="{resources.style.buttonCollection}">
						<g:Button ui:field="deleteSelectedReportTasks">Delete</g:Button>
						<g:Button ui:field="newReportTask">New</g:Button>
						<g:Button ui:field="editReportTask">Edit</g:Button>
					</g:FlowPanel>
					
					<br></br>
					<div>
						<g:TextBox ui:field="searchQueryInput" addStyleNames="{style.searchBox}" >
						</g:TextBox>
						<g:Button ui:field="searchResults">search</g:Button>
					</div>
					<br></br>
					<div style="margin-top:5px;">
						<c:CellTable ui:field="reportTasksTable"/>
						<c:SimplePager ui:field="pager"/>
					</div>
				</div>

			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>