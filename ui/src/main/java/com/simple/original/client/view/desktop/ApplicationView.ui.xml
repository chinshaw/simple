<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ov="urn:import:com.simple.original.client.view.onevoice"
	xmlns:t="urn:import:com.simple.original.client.view" xmlns:desktop="urn:import:com.simple.original.client.view.desktop">

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

	<ui:style>
		.content {
			position: absolute;
			right: 10px;
			top: 120px;
			text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.7);
			font-size: 12px;
			color: #CCCCCC;
		}
		
		.navPanel {
			height: 100%;
			width: 100%;
			padding-right: 3px;
		}
		
		.contentWrapper {
			width: 100%;
			padding-left: 3px;
		}
		
		.contentHeader {
			height: 25px;
			padding-top: 15px;
			padding-bottom: 10px;
			padding-left: 10px;
			background-color: #CCCCCC;
		}
	</ui:style>

	<g:DockLayoutPanel ui:field="dockLayoutPanel" unit="PX">
		<g:north size="25">
			<g:MenuBar animationEnabled="true" width="100%" ui:field="startMenu">
				<g:MenuItem text="Options">
					<g:MenuBar vertical="true" animationEnabled="true">
						<g:MenuItem ui:field="users">User Preferences</g:MenuItem>
					</g:MenuBar>
				</g:MenuItem>
			</g:MenuBar>
		</g:north>
		<g:north size="50">
			<g:HTMLPanel styleName="{style.contentHeader}">
				<h1 ui:field="contentTitle">Application</h1>
			</g:HTMLPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>
