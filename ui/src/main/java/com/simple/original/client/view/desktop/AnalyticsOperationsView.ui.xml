<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:com.simple.original.client.view.widgets">

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

	<ui:style>
	.search {
		margin-bottom: 5px;
		display: block;
		float: right;
	}
	
	div.search input {
		float: left;
		margin-right: 5px;
	}
	
	.operationsPanel {
		min-height: 15em;
	}
	</ui:style>

	<g:HTMLPanel styleName="{resources.style.contentPanel}">
		<t:ErrorPanel ui:field="errorPanel"></t:ErrorPanel>
		<div class="{resources.style.header}">
			<h1>Analytics Operations</h1>
		</div>
		<g:SplitLayoutPanel  styleName="{resources.style.content}" >
			<g:west size="200">
				<g:HTMLPanel>

				</g:HTMLPanel>
			</g:west>

			<g:center>
				<g:HTMLPanel  styleName="{resources.style.content}">
					<div style="float:left;">
						<div style="display:block; margin-bottom: 5em;">
							<g:Button ui:field="addAnalytics">New</g:Button>
							<div class="{style.search}">
								<g:TextBox ui:field="searchQueryInput" />
								<g:Button ui:field="searchResults">search</g:Button>
							</div>
						</div>

						<div class="{style.operationsPanel}">
							<h2>All Operations</h2>
							<c:CellList ui:field="operationsList" />
						</div>

						<div style="float:right;">
							<c:SimplePager ui:field="pager" />
						</div>
					</div>
				</g:HTMLPanel>
			</g:center>
		</g:SplitLayoutPanel>

	</g:HTMLPanel>
</ui:UiBinder>