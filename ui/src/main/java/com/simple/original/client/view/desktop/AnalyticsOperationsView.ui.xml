<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:com.simple.original.client.view.widgets">

	<ui:with field='resources' type='com.simple.original.client.resources.Resources' />

	<ui:style>
		.search {
			margin-bottom: 5px;
		}
		
		.searchBox {
			color: #FFF;
			background: transparent;
			border: 1px solid #333;
			width: 250px;
		}
		
		.listBox {
			float: right;
		}
		
		.buttonStyle {
			width: 155px;
		}
		
		.actionButtons {
			float: right;
		}
	</ui:style>

	<g:DockLayoutPanel styleName="{resources.style.contentPanel}"
		unit="PX">
		<g:center>
			<g:HTMLPanel>
				<t:ErrorPanel ui:field="errorPanel"></t:ErrorPanel>
				<g:FlowPanel styleName="{resources.style.buttonCollection}">
					<g:Button ui:field="deleteOperations">Delete</g:Button>
					<g:Button ui:field="addAnalytics">New</g:Button>
					<g:Button ui:field="copyOperations">Copy</g:Button>
					<g:Button ui:field="editOperations">Edit</g:Button>
				</g:FlowPanel>
				<div style="margin-top:5px; margin-bottom:5px;">
					<g:TextBox ui:field="searchQueryInput" addStyleNames="{style.searchBox}" />
					<g:Button ui:field="searchResults">search</g:Button>
				</div>
				<c:CellList ui:field="operationsList" />
				<c:SimplePager ui:field="pager" />
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>